<%= render "devise/partials/card" do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render partial: "devise/partials/error_messages", locals: {resource: resource} %>

    <div class="card hoverable">
      <div class="card-content">
        <div class="row">
          <span class="card-title center-align">Change your password</span>

          <%= f.hidden_field :reset_password_token %>

          <div class="input-field col s12">
            <%= f.password_field :password, autocomplete: "new-password" %>
            <%= f.label :password, "New password" %>
          </div>

          <div class="input-field col s12">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            <%= f.label :password_confirmation, "Confirm new password" %>
          </div>

          <div class="col s12" style="margin-top: 20px;">
            <%= render partial: "devise/partials/forms/submit", locals: {form: f, text: "Change my password"} %>
          </div>
        <% end %>
      </div>

      <div class="card-action">
        <%= render "devise/partials/links" %>
      </div>
    </div>
  </div>
<% end %>
