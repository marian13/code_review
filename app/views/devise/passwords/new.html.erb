<%= render "devise/partials/card" do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render partial: "devise/partials/error_messages", locals: {resource: resource} %>

    <div class="card hoverable">
      <div class="card-content">
        <div class="row">

          <span class="card-title center-align">Forgot your password?</span>

          <div class="input-field col s12">
            <%= f.email_field :email, autocomplete: "email", class: "validate" %>
            <%= f.label :email %>
          </div>

          <div class="col s12" style="margin-top: 20px;">
            <%= render partial: "devise/partials/forms/submit", locals: {form: f, text: "Send me reset password instructions"} %>
          </div>
        </div>
      </div>

      <div class="card-action">
        <%= render "devise/partials/links" %>
      </div>
    </div>
  <% end %>
<% end %>
